<div class="main-content">
    <article class="post">
        <div class="post-title">
            <h2 class="title"><%= page.title %></h2>
        </div>
        <div class="post-content blog-markdown">
            <%- page.more %>
        </div>
        <div class="post-detail">
            发布：<%- date(page.date, "YYYY-MM-DD HH:mm:ss") %><br>修改：<%- date(page.updated, "YYYY-MM-DD HH:mm:ss") %><br>链接：<span
                    class="shareUrl"><%- page.permalink %></span><br><% if (page.tags && page.tags.length){ %>标签：<span><% for(let i = 0;i < page.tags.length;i++){%><a href="<%- url_for(page.tags.data[i].path) %>"><%= page.tags.data[i].name %></a>&nbsp;<% } %></span><% } %>
        </div>
        <div class="post-btn">
            <img no-lazy src="<%- url_for(theme.Icon.Payment) %>" style="display:none" alt="付款码">
            <span class="post-donation-btn">捐助</span>
            <span class="post-share-btn">分享</span>
        </div>
        <%- partial("_partial/comment.ejs") %>
        <% if (theme.Footer.counter){ %>
            <div class="busuanzi">
                <span id="busuanzi_container_page_pv">阅读量<span id="busuanzi_value_page_pv"></span>次</span>
                <script defer src="<%- url_for("js/busuanzi.js") %>"></script>
            </div>
        <% } %>
    </article>
    <div class="outline" title="目录"><span class="fa fa-list-alt"></span></div>
</div>
